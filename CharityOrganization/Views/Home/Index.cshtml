
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div id="imageCarousel" class="carousel slide" data-interval="2000" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#imageCarousel" data-slide-to="1"></li>
                <li data-target="#imageCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" data-wrap="true" data-pause="false">
                <div class="item active">
                    <img src="~/Images/children.jpg" class="img-responsive" />
                    <div class="carousel-caption">
                        <h3>Give a welcome to their Need</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Images/children-educate.jpg" class="img-responsive" />
                    <div class="carousel-caption">
                        <h3>Share the Happiness</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Images/child-hand.jpg" class="img-responsive" />
                    <div class="carousel-caption">
                        <h3>See the honesty for the help</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






